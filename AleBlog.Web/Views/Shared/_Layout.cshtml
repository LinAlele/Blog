<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AleBlog</title>
     <style>
         html {
             font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
         }

         a {
             color: #000000;
             text-decoration: none;
         }

             a:hover {
                 color: #919191;
                 transition: color .2s ease,border-color .2s ease,background .2s ease,opacity .2s ease;
                 text-decoration: none;
             }

         .navbar {
             height: 4rem;
             line-height: 4rem;
             width: 100%;
         }
         .navbar .container{
             width:auto;
             max-width:1080px;
             text-align:center;
             margin:0 auto;
             display:flex;
             justify-content:space-between;
         }
         .navbar-header a:hover,
         .navbar .menu a:hover {
             background-color: transparent;
         }

         .page-blank{
             width:100%;
             max-width:900px;
             margin:0 auto;
             padding-top:2rem;
         }
         .article-item-createdt {
             text-align: right;
             float: right;
             color: #858585;
         }
     </style>
</head>
<body>
    <div class="blank">
        <header>
            <nav class="navbar">
                <div class="container">
                    <div class="navbar-header">
                        <a href="/">林阿乐🌝</a>
                    </div>
                    <div class="menu navbar-right">
                        <a class="menu-item" href="javascript:">文章</a>
                        <a class="menu-item" href="javascript:">~</a>
                    </div>
                </div>
            </nav>
        </header>
        @RenderBody()
    </div>
</body>
</html>
@RenderSection("Scripts", required: false)
